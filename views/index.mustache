<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dyte Logs</title>
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

    <style>
        body {
            background-color: var(--white);
            color: var(--dim-gray);
        }

        h1 {
            color: var(--jet);
        }

        .container {
            background-color: var(--white);
            padding: 20px;
            border-radius: 10px;
        }

        label {
            color: var(--dim-gray);
        }

        input {
            background-color: var(--white);
            color: var(--dim-gray);
            border: 1px solid var(--timberwolf);
        }

        th, td {
            background-color: var(--white);
            color: var(--dim-gray);
        }
    </style>

    <style>
        :root {
            --white: #f6f6f6f6;
            --dim-gray: #686868ff;
            --timberwolf: #d8d8d8ff;
            --jet: #303030ff;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <h1 class="text-center">Dyte Logs</h1>
    <!-- Gap --> <br>

    <!-- Filter Row -->
    <div class="row mb-3">
        <div class="col-md-3">
            <label for="filterColumn" class="form-label">Search Column:</label>
            <select class="form-select" id="filterColumn">
                <option value="level">Level</option>
                <option value="message">Message</option>
                <option value="resourceId">Resource ID</option>
                <option value="timestamp">Timestamp</option>
                <option value="traceId">Trace ID</option>
                <option value="spanId">Span ID</option>
                <option value="commit">Commit</option>
                <option value="metadata.parentResourceId">Parent Resource ID</option>
            </select>
        </div>
        <div class="col-md-9">
            <label for="filterValue" class="form-label">Search Value:</label>
            <input type="text" class="form-control" id="filterValue" placeholder="Enter filter value">
        </div>
    </div>

    <!-- Gap --> <br>

    <!-- Display the count of records -->
    <p class="text-muted">Found <strong>{{logsCount}}</strong> Log Entries</p>

    <!-- Table for Search Results -->
    <table class="table">
        <thead class="text-center">
        <tr>
            <th scope="col">Level</th>
            <th scope="col">Message</th>
            <th scope="col">Resource ID</th>
            <th scope="col">Timestamp</th>
            <th scope="col">Trace ID</th>
            <th scope="col">Span ID</th>
            <th scope="col">Commit</th>
            <th scope="col">Parent Resource ID</th>
        </tr>
        </thead>
        <tbody>
        {{#logs}}
            <tr>
                <td>{{level}}</td>
                <td>{{message}}</td>
                <td>{{resourceId}}</td>
                <td>{{timestamp}}</td>
                <td>{{traceId}}</td>
                <td>{{spanId}}</td>
                <td>{{commit}}</td>
                <td>{{metadata.parentResourceId}}</td>
            </tr>
        {{/logs}}
        <!-- Add more rows as needed with actual data -->
        </tbody>
    </table>
</div>

</body>
</html>
